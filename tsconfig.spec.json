{
  "exclude": [
    "**/frontend-only*"
  ],
  "compilerOptions": {
    "allowJs": false,
    "outDir": "./tsc-out/server-commons-spec/",
    "baseUrl": "./src/",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "typeRoots": [
      "typings.d.ts",
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "dom"
    ],
    "types": ["node", "jasmine"],
    "paths": {
      "*": [ "../node_modules/*", "*"]
    }
  }
}
